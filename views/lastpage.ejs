<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="../static/css/subpage.css" />
        <link rel="shortcut icon" type="image/png" href="../static/img/favicon.png" />
        <script src="https://www.google.com/recaptcha/api.js" defer></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js"></script>
        <title>FALLACIES</title>
    </head>
    <body onload="loaded()">
        <div id="loader"><img src="../static/img/loading.gif" alt="Loading..." class="loading-gif"></div>
        <div class="container">
            <a href="https://csivit.com/"><img src="../static/img/CSIDark(saturated).png" alt="CSI LOGO" class="csilogo" /></a>
            <img src="../static/img/title.png" alt="Fallacies" class="logo" />
            <form class="game-form" id="game-form">
                <div class="form__group form__group-msg">
                    <h2 class="message"><%= message %></h2>
                    <!-- <h3 class="alert"></h3> -->
                    
                </div>
            </form>
            <button class="btn-signout" onclick="logoutAjax()">Log Out</button>
            <button class="btn-leaderboard" id="leaderboard">LEADERBOARD</button>
        </div>
        

        <script>
        if(document.getElementById("loader")) document.querySelector(".container").style.display = 'none';
        function loaded() {
            document.getElementById("loader").style.display = "none";
            document.querySelector(".container").style.display = "flex";
        }
        </script>
        
        <script src="https://www.google.com/recaptcha/api.js" defer></script>
        <script src="../static/js/logout.js"></script>
        <script src="../static/js/submission.js"></script>
    </body>
</html>
